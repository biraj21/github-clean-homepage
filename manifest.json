{
  "manifest_version": 3,
  "name": "GitHub Homepage Enhancer",
  "version": "1.0",
  "description": "Improves GitHub homepage by focusing on your repositories",
  "permissions": ["storage"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "./logo.png",
    "48": "./logo.png",
    "128": "./logo.png"
  }
} 